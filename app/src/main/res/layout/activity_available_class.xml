<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AvailableClass">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/available_code_header"
        android:background="#ef534f"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_arrow_back"
            android:onClick="ClickBack"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/custom_poppins"
            android:textSize="15sp"
            android:text="Available Subjects"/>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/available_code_header"
        android:padding="10dp">
        <!-- Recycle View-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_view_av"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </androidx.recyclerview.widget.RecyclerView>
        <!--end of recycle v iew-->



    </LinearLayout>


</RelativeLayout>