                    <EditText
                        android:layout_height="50dp"
                        android:layout_width="wrap_content"
                        android:id="@+id/ftotal_act"
                        android:hint=""/>

                    <EditText
                        android:layout_height="50dp"
                        android:layout_width="wrap_content"
                        android:id="@+id/ftotal_ass"
                        android:hint=""/>
                    <EditText
                        android:layout_height="50dp"
                        android:layout_width="wrap_content"
                        android:id="@+id/ftotal_q"
                        android:hint=""/>
                    <EditText
                        android:layout_height="50dp"
                        android:layout_width="wrap_content"
                        android:id="@+id/ftotal_ex"
                        android:hint=""/>

                </TableRow>
            </TableLayout>
  </HorizontalScrollView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/add_now_btn"
            app:backgroundTint="@null"
            android:background="#00c853"
            android:text="Add now"/>
        <Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/later_btn"
            app:backgroundTint="@null"
            android:background="#f44235"
            android:text="Add Later"/>
    </LinearLayout>
    



</RelativeLayout>